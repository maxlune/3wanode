mixin toggler(target)
    button.navbar-toggler(data-toggle="collapse", data-target=target)
        span.navbar-toggler-icon

<!DOCTYPE html>
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")

        link(rel="stylesheet", href="/lib/bootstrap.min.css")
        link(rel="stylesheet", href="/styles/app.css")

        title Socket Tchat
    body

        header
            nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
                a.navbar-brand(href="/") Node Tchat
                +toggler('#navbarContent')
                .collapse.navbar-collapse#navbarContent
                    ul.navbar-nav.mr-auto
                        li.nav-item
                            a.nav-link(href="/") Accueil du chat

        div.container-fluid
            .row
                aside.col-md-2.bg-secondary.text-light
                    .sidebar-sticky
                        h2 Channels
                        ul
                            li
                                a.text-light(href="#", title="Accéder au channel Général") Général
                            li
                                a.text-light(href="#", title="Accéder au channel Gaming") Gaming
                            li
                                a.text-light(href="#", title="Accéder au channel Random") Random

                main.main.col-md-10(role="main")
                    form#chat
                        .form-group
                            input#message.form-control(type="text", placeholder="Tapez votre message ici ...", autofocus)

                        ul#messages.list-group.list-group-flush

                    aside.col-md-2.bg-secondary.text-light
                        .sidebar-sticky
                            h2 Personnes connectées
                            ul#users.list-group

    script(src="/lib/jquery.min.js")
    script(src="/lib/bootstrap.min.js")
    script(src="/socket.io/socket.io.js")
    script(src="/scripts/Client.js")
    script(src="/scripts/app.js")